<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/rosybrown_50</item>
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/rosybrown</item> <!--Actionbar,Buttons ,selected on bottom nav. -->
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/Dark_gray</item><!--color for when you press on , and text on. -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Category, load more and sort button-->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">10dp</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/border_stjarna</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <!-- Contained Button (important like the login in button , add recipe)-->
    <style name="MyContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/rosybrown</item>
    </style>

    <!-- Outlined Button -->
    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/rosybrown_50</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Button load more , -->
    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/playfair_display_semibold</item>
        <item name="strokeColor">@color/unselectedChipBackground</item>
    </style>

    <!-- Text Button load more , -->
    <style name="MyTextButton2" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">5dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/Light_grey</item>
    </style>

    <!-- Headers-->
    <style name="Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">31sp</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/Dark_gray</item>
    </style>


    <!-- Bottom nav-->
    <style name="bottom_nav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:colorPrimary">@color/rosybrown</item>
        <!-- Item icon and text tint colors -->
        <item name="itemIconTint">@color/mtrl_navigation_bar_item_tint</item> <!-- Default item icon tint -->

        <item name="itemTextColor">@color/mtrl_navigation_bar_item_tint</item> <!-- Default item text color -->
        <!-- Ripple color -->
        <item name="itemRippleColor">@color/mtrl_navigation_bar_ripple_color</item>

    </style>

    <!-- bottomSheets -->
    <style name="bottomsSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="iconTint">@color/rosybrown</item>
        <item name="fontFamily">@font/playfair_display</item>
        <item name="textAllCaps">true</item>
        <item name="itemTextColor">@color/rosybrown</item>
        <item name="android:titleTextColor">@color/rosybrown</item>
        <item name="background">@color/rosybrown_50</item>
    </style>


    <!-- Custom Text Style -->
    <style name="CustomBottomSheetText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/rosybrown</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/playfair_display</item>
    </style>

    <!-- Custom Button Text Style -->
    <style name="CustomBottomSheetButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/rosybrown</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="actionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">@color/Dark_gray</item>
        <item name="iconTint">@color/rosybrown</item>
        <item name="itemTextColor">@color/Dark_gray</item>
        <item name="android:background">@color/rosybrown_50</item>

        <!-- Set the title size and font -->
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ToolbarTitle style for the title text appearance -->
    <style name="ToolbarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:textColor">@color/Dark_gray</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare the recipeCard variable -->
        <variable
            name="recipeCard"
            type="com.hi.recipeapp.classes.CalendarRecipeCard" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/calendarRecipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recipeCard.title}"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:textSize="16sp" />

            <!-- Button for removing from calendar -->
            <ImageButton
                android:id="@+id/removeFromCalendarButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/remove_recipe_from_calendar"
                android:src="@drawable/delete_13550284" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Button Bar (Favorites / My Recipes) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- Favorites Button -->
        <Button
            android:id="@+id/favoritesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Favorites"
            android:textColor="@android:color/black"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="16sp"
            android:padding="8dp"/>

        <!-- My Recipes Button -->
        <Button
            android:id="@+id/myRecipesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Recipes"
            android:textColor="@android:color/black"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="16sp"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Progress Bar (Initially invisible) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <!-- RecyclerView to display the list of favorite recipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteRecipeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- Make RecyclerView take up available space -->

    <!-- RecyclerView to display the list of "My Recipes" -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- Make RecyclerView take up available space -->

</LinearLayout>

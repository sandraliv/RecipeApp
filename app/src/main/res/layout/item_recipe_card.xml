<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <!-- Heart Buttons: Empty heart and Filled heart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Empty Heart Button (Add to Favorites) -->
            <ImageButton
                android:id="@+id/emptyHeartButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_heart_empty"
                android:contentDescription="Add to Favorites"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <!-- Filled Heart Button (Remove from Favorites) -->
            <ImageButton
                android:id="@+id/filledHeartButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_heart_filled"
                android:contentDescription="Remove from Favorites"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                 /> <!-- Initially hidden, shown when recipe is favorited -->

        </LinearLayout>

        <!-- Recipe image -->
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:contentDescription="Recipe image"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop" />

        <!-- Recipe name -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <!-- Recipe description -->
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Description"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Rating layout -->
        <LinearLayout
            android:id="@+id/recipe_rating_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|bottom"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            >

            <!-- Rating stars -->
            <TextView
                android:id="@+id/recipe_rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐⭐⭐"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"
                />


            <!-- Rating count -->
            <TextView
                android:id="@+id/recipe_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(50)"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

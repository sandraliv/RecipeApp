<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/rosybrown_50</item>
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/rosybrown</item> <!--Actionbar,Buttons ,selected on bottom nav. -->
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/green</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here -->


    </style>

    <!-- Custom button style Category and sort button-->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Shape and corner radius for contained buttons -->
        <item name="cornerRadius">2dp</item>
        <!-- Padding around button content -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <!-- Text appearance and size -->
        <item name="android:textSize">14sp</item>
        <!-- Elevation for the button (shadow effect) -->
        <item name="android:elevation">20dp</item>
        <!-- Set the background to use the drawable with a border -->
        <item name="background">@drawable/button_border</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/border_stjarna</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Corrected Button styles for different types -->

    <!-- Contained Button (important like the login in button )-->
    <style name="MyContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/rosybrown</item>
    </style>

    <!-- Outlined Button (corrected parent style) -->
    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/rosybrown_50</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Button (corrected parent style) -->
    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Contained Button (important like the login in button )-->
    <style name="bottomnav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:colorPrimary">@color/rosybrown</item>
        <item name="iconTint">@color/rosybrown</item>
    </style>

</resources>

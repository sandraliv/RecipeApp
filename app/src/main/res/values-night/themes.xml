<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Light_grey</item>
        <item name="android:windowBackground">@color/Dark_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/rosybrown_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosybrown_dark</item>
        <item name="colorSecondaryVariant">@color/rosybrown_dark</item>
        <item name="colorOnSecondary">@color/Light_grey</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarItemBackground">@color/Dark_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Category and sort button-->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">10dp</item>
        <item name="backgroundTint">@color/rosybrown_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/border_stjarna</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">android:fontFamily="sans-serif-light"</item>
    </style>


    <!-- Contained Button (important like the login in button , add recipe)-->
    <style name="MyContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/rosybrown</item>
    </style>

    <!-- Outlined Button -->
    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/Medium_grey</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Button -->
    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/Medium_grey</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:elevation">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/Medium_grey</item>
    </style>

    <!-- Text Button-->
    <style name="MyTextButton2" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/Medium_grey</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">5dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/Medium_grey</item>
    </style>


    <!-- Headers-->
    <style name="Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">31sp</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/Light_grey</item>
    </style>

    <!-- bottomSheets -->
    <style name="bottomsSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="iconTint">@color/Light_grey</item>
        <item name="android:titleTextColor">@color/Light_grey</item>
    </style>

    <!-- bottom navigation-->
    <style name="bottom_nav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:colorPrimary">@color/rosybrown</item>
        <item name="iconTint">@color/rosybrown</item>
        <item name="android:background">@color/Dark_gray</item>
    </style>

    <!-- actionbar/toolbar -->
    <style name="actionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:colorPrimary">@color/Dark_gray</item>
        <item name="iconTint">@color/rosybrown</item>
        <item name="android:title">1sp</item>
        <item name="android:titleTextColor">@color/Dark_gray</item>
        <item name="android:background">@color/Dark_gray</item>
    </style>


    <!-- Recipe cards-->
    <style name="RecipeCards" parent="Widget.MaterialComponents.CardView">
        <item name="android:textColor">@color/Light_grey</item>
        <item name="backgroundTint">@color/Medium_grey</item>
    </style>

    <!-- Text Button prev and next month , -->
    <style name="PrevNextMonthButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/Light_grey</item>
        <item name="backgroundTint">@color/very_dark_brow</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/Dark_gray</item>
    </style>

    <style name="VerticalAndHorizontalLineStyle">
        <item name="android:background">@color/Medium_grey</item>
    </style>

    <!-- My recipes, favorites, calendar  Button Style -->
    <style name="MyRecipesMainButtons" parent="Widget.AppCompat.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WeekHeaderTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Light_grey</item>
    </style>


    <style name="DayToNightTextStyle">
        <item name="android:textColor">@color/Light_grey</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/Dark_gray</item>
        <item name="colorAccent">@color/Medium_grey</item>
        <item name="android:textColorPrimary">@color/Light_grey</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- FrameLayout to overlay heart buttons over the ViewPager2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ViewPager2 to display all recipe images -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Heart Buttons: Empty heart and Filled heart (Positioned on top of the ViewPager2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|top"
                android:orientation="horizontal">

                <!-- Empty Heart Button (Add to Favorites) -->
                <ImageButton
                    android:id="@+id/emptyHeartButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add to Favorites"
                    android:src="@drawable/ic_heart_empty"
                    android:scaleType="center"
                    android:layout_gravity="end|top"
                    android:elevation="2dp" />

                <!-- Filled Heart Button (Remove from Favorites) -->
                <ImageButton
                    android:id="@+id/filledHeartButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Remove from Favorites"
                    android:src="@drawable/ic_heart_filled"
                    android:scaleType="center"
                    android:layout_gravity="end|top" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Recipe Name"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Recipe description -->
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Recipe Description"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

        <!-- Rating layout -->
        <LinearLayout
            android:id="@+id/recipe_rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="end|bottom"
            android:orientation="horizontal">

            <!-- Dynamically added Rating stars -->
            <LinearLayout
                android:id="@+id/starRatingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />

            <!-- Rating count -->
            <TextView
                android:id="@+id/recipe_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="(50)"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
